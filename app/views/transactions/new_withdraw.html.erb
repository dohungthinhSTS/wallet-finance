<div class='container'>
  <%= form_tag '/transactions/withdraw', method: :post %>
    <div class="form-group">
      <label for="walletId">Sources</label>
      <%= select_tag 'transaction[wallet_id]', options_for_select(@sources.collect{ |source| [source.name, source.wallet.hash_address] }), class: 'form-control' %>
      <small id="walletId" class="form-text text-muted">Source for Withdraw</small>
    </div>
    <div class="form-group">
      <label for="amount">Amount</label>
      <input type="number" name='transaction[amount]' min=0 class="form-control" id="amount" placeholder="Amount">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
